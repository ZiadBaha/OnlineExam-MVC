@using OnlineExam.Core.Enums

@model OnlineExam.Core.DTOs.Program.ExamDto.AddExamDto

@{
    ViewData["Title"] = "Create Exam";
}

<h1>Create New Exam</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required />
    </div>
    <div class="form-group">
        <label asp-for="Difficulty"></label>
        <select asp-for="Difficulty" class="form-control"
                asp-items="Html.GetEnumSelectList<ExamDifficulty>()">
        </select>
        <span asp-validation-for="Difficulty" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Exam</button>
</form>
