@model OnlineExam.Core.DTOs.Program.ExamDto.UpdateExamDto
@using OnlineExam.Core.Enums

@{
    ViewData["Title"] = "Edit Exam";
}

<h1>Edit Exam</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required />
    </div>

    <div class="form-group">
        <label asp-for="Difficulty"></label>
        <select asp-for="Difficulty" class="form-control" asp-items="Html.GetEnumSelectList<ExamDifficulty>()">
            <option value="">-- Select Difficulty --</option>
        </select>
        <span asp-validation-for="Difficulty" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update Exam</button>
</form>
