@model List<OnlineExam.Core.DTOs.Program.ExamDto.GetExamDto>

@{
    Layout = "_UserLayout";
}

<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Browse All Quizzes</h2>
            <p class="lead text-muted">Choose from a wide range of topics and challenge yourself today!</p>
        </div>

        <div class="row g-4">
            @foreach (var quiz in Model)
            {
                <div class="col-md-4">
                    <div class="card quiz-card h-100">
                        <!-- Static Image for now; replace with dynamic if needed -->
                        <img src="~/assets/images/quiz.jpg" class="card-img-top" alt="@quiz.Title Quiz">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title mb-0">@quiz.Title</h5>
                                <span class="badge bg-primary">@quiz.Difficulty</span>
                            </div>
                            <p class="card-text text-muted">
                                @quiz.questionDtos.Count() Questions
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="fas fa-question-circle me-1"></i>@quiz.questionDtos.Count() Questions
                                </small>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <!-- Start Quiz Button -->
                            <a asp-action="ExamQuestions" asp-route-id="@quiz.Id" class="btn btn-primary w-100">
                                <i class="fas fa-play me-1"></i>Start Quiz
                            </a>
                           
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
